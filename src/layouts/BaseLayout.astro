---
import "../styles/global.css";

const { title = "Aesleth Codex Lore Library" } = Astro.props;

// BASE_URL otomatis: "/" saat dev, "/<repo>/" saat GitHub Pages
const base = import.meta.env.BASE_URL;
const withBase = (path: string) => `${base}${path}`;

// Base-aware URL for public assets (no router error)
const lifetreeUrl = withBase("images/ui/lifetree-silhouette.png");
---

<!doctype html>
<html lang="id" style={`--lifetree-url: url('${lifetreeUrl}')`}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>

  <body>
    <header class="site-header">
      <nav class="nav">
        <a class="nav__link" href={withBase("")}>Home</a>
        <a class="nav__link" href={withBase("lore/")}>Lore</a>
        <a class="nav__link" href={withBase("about/")}>About</a>
      </nav>
    </header>

    <main class="container">
      <slot />
    </main>

    <footer class="footer container">
      <small>Built with Astro • © 2025 Aesleth Codex. All rights reserved.</small>
    </footer>
  </body>
</html>

<style is:global>
  /* =========================
     BaseLayout minimal styles
     (biar ga bentrok sama global.css)
  ========================= */

  :root{
    --text: #111;
    --border: rgba(0,0,0,0.08);
    --link: #3b5bdb;
  }

  body{
    margin: 0;
    color: var(--text);
    /* JANGAN set background putih di sini,
       biar theme + watermark dari global.css jalan */
    font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
    line-height: 1.6;
  }

  a{ color: var(--link); }
  a:hover{ text-decoration: underline; }

  .site-header{
    position: sticky;
    top: 0;
    z-index: 20;
    /* biar watermark masih “ngintip” */
    background: rgba(238, 241, 244, 0.85);
    backdrop-filter: blur(6px);
    border-bottom: 1px solid var(--border);
  }

  .nav{
    display: flex;
    justify-content: center;
    gap: 28px;
    padding: 14px 12px;
  }

  .nav__link{
    text-decoration: none;
    color: var(--text);
    font-weight: 500;
  }

  .container{
    max-width: 920px;
    margin: 0 auto;
    padding: 28px 16px;
  }

  .footer{
    border-top: 1px solid var(--border);
    padding-top: 16px;
    padding-bottom: 28px;
    opacity: 0.7;
    text-align: center;
  }
</style>
