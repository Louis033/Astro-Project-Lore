---
import "../styles/global.css";

const { title = "Aesleth Codex Lore Library" } = Astro.props;

// BASE_URL otomatis: "/" saat dev, "/<repo>/" saat GitHub Pages
const base = import.meta.env.BASE_URL;
const withBase = (path) => `${base}${path}`; // path tanpa leading slash
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body>
    <header class="site-header">
      <nav class="nav">
        <a class="nav__link" href={withBase("")}>Home</a>
        <a class="nav__link" href={withBase("lore/")}>Lore</a>
        <a class="nav__link" href={withBase("about/")}>about</a>
      </nav>
    </header>

    <main class="container">
      <slot />
    </main>

    <footer class="footer container">
      <small>Built with Astro •  © 2025 Aesleth Codex. All rights reserved.
</small>
    </footer>
  </body>
</html>

<style is:global>
  /* ====== Base typography (biar Home nggak polos) ====== */
  :root {
    --text: #111;
    --muted: rgba(17, 17, 17, 0.7);
    --border: #eee;
    --link: #3b5bdb;
  }

  body {
    font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
    line-height: 1.6;
    color: var(--text);
    background: #fff;
    margin: 0;
  }

  a {
    color: var(--link);
  }
  a:hover {
    text-decoration: underline;
  }

  h1 {
    font-size: 44px;
    line-height: 1.1;
    margin: 0 0 14px;
  }
  h2 {
    font-size: 28px;
    margin: 22px 0 10px;
  }
  p {
    margin: 0 0 14px;
  }
  ul {
    margin: 0;
    padding-left: 20px;
  }
  li {
    margin: 6px 0;
  }

  /* ====== Layout styling ====== */
  .site-header {
    position: sticky;
    top: 0;
    background: white;
    border-bottom: 1px solid var(--border);
    z-index: 10;
  }

  .nav {
    display: flex;
    justify-content: center;
    gap: 28px;
    padding: 14px 12px;
  }

  .nav__link {
    text-decoration: none;
    color: var(--text);
  }
  .nav__link:hover {
    text-decoration: underline;
  }

  .container {
    max-width: 920px;
    margin: 0 auto;
    padding: 28px 16px;
  }

  .footer {
    border-top: 1px solid var(--border);
    padding-top: 16px;
    padding-bottom: 28px;
    opacity: 0.7;
  }

  /* ====== Small helpers ====== */
  .small {
    font-size: 14px;
    color: var(--muted);
  }

  .badge {
    display: inline-block;
    margin-left: 10px;
    padding: 2px 10px;
    border: 1px solid var(--border);
    border-radius: 999px;
    font-size: 12px;
    color: var(--muted);
    vertical-align: middle;
  }

  .list a {
    text-decoration: none;
  }

  .list a:hover {
    text-decoration: underline;
  }
</style>
