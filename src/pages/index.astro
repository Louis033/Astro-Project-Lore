---
import BaseLayout from "../layouts/BaseLayout.astro";

const base = import.meta.env.BASE_URL;
const withBase = (path) => `${base}${path}`; // path tanpa leading slash
---

<BaseLayout title="Aerthos Lore Library">
  <h1>Aerthos Lore Library</h1>
  <p class="small">Perpustakaan lore pribadi. Masih dalam development dan eksperimen.</p>

  <ul>
    <li>
      <a href={withBase("characters/")}>Characters</a> — Browse
    </li>
    <li>
      <a href={withBase("items/")}>Items</a> — Browse
    </li>
  </ul>
</BaseLayout>
