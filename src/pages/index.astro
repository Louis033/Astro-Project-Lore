---
import BaseLayout from "../layouts/BaseLayout.astro";

const base = import.meta.env.BASE_URL;
const withBase = (path) => `${base}${path}`; // path tanpa leading slash
---

<BaseLayout title="Aesleth Codex Lore Library">
  <h1>Aesleth Codex Lore Library</h1>
  <p class="small">Perpustakaan lore pribadi. Masih dalam development dan eksperimen.</p>

  <ul>
    <li>
      <a href={withBase("lore/books/")}>Books</a> 
    </li>
  </ul>
</BaseLayout>
