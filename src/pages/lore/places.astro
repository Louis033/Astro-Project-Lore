---
import Layout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const placesEntries = await getCollection("places");
---

<Layout title="Places | Aesleth Codex">
  <article class="lore-page">
    <h1>Places</h1>
    <p class="intro">Districts, ruins, sanctuaries, and the places people pretend donâ€™t exist.</p>

    <ul class="history-list">
      {placesEntries.map((entry) => (
        <li>
          <a href={`${import.meta.env.BASE_URL}lore/places/${entry.slug}/`}>
            <h3>{entry.data.title}</h3>
            <p>{entry.data.summary}</p>
          </a>
        </li>
      ))}
    </ul>
  </article>
</Layout>
