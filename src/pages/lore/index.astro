---
import BaseLayout from "../../layouts/BaseLayout.astro";

const base = import.meta.env.BASE_URL;
const withBase = (path) => `${base}${path}`;
---

<BaseLayout title="Lore">
  <h1>Aesleth Lore</h1>

  <p>
    This section serves as an index to the recorded knowledge, history,
    and entities of the Aesleth world.
  </p>

  <h2>Categories</h2>

  <ul>
    <li><a href={withBase("characters/")}>Characters</a></li>
    <li><a href={withBase("items/")}>Items</a></li>
    <li><a href={withBase("lore/history/")}>History</a></li>
    <li><a href={withBase("lore/factions/")}>Factions</a></li>
    <li><a href={withBase("lore/bestiary/")}>Books</a></li>
    <li><a href={withBase("lore/places/")}>Places</a></li>
  </ul>
</BaseLayout>
